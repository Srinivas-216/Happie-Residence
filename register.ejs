<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="/css/register.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
</head>
<body>

    <div class="container">
        <div class="head" style="margin-left: auto; font-size: 150%;">
           <h1><span class="brand" style="color: chartreuse;">Happi</span> Residence</h1>
        </div>
        <div class="login-box">
            <i class='bx bx-user-circle'></i>
            <h2>Register</h2>
            <form id="loginForm" action="/register" method="POST">
                <div class="half-width">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="uemail" required>
                </div>
                <div class="half-width">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="uname" required>
                </div>
                <div class="half-width">
                    <label for="phone">Phone:</label>
                    <input type="text" id="phone" name="uphone" required>
                </div>
                <div class="half-width">
                    <label for="password">Password</label>
                    <div class="password-container">
                        <input type="password" id="password" name="upassword" required>
                         
                    </div>                    
                </div>

                <div class="half-width">
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="uaddress" required>
                </div>
                <div class="half-width">
                    <label for="city">City:</label>
                    <input type="text" id="city" name="ucity" required>
                </div>
                <div class="half-width">
                    <label for="state">State:</label>
                    <input type="text" id="state" name="ustate" required>
                </div>
                <div class="half-width">
                    <label for="country">Country:</label>
                    <input type="text" id="country" name="ucountry" required>
                </div>
                <div class="half-width">
                    <label for="pincode">Pincode:</label>
                    <input type="text" id="pincode" name="upincode" required>
                </div>

                <button type="submit">Signup</button>
                <p id="message"></p>
                <p>Already have an account? <a href="/login" style="text-decoration: none;">Login</a></p>
            </form>
        </div>
    </div>

   <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            let passwordInput = document.getElementById('password');
            let icon = this;
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bx-show');
                icon.classList.add('bx-hide');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bx-hide');
                icon.classList.add('bx-show');
            }
        });
    </script>
    

</body>
</html>
